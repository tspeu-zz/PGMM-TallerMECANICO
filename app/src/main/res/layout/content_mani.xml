<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mani" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".ManiActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logotipo"
            android:contentDescription="@string/logo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botonreserva"
            android:id="@+id/buttonReserva"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorPrimaryTextBlanco" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botoneditar"
            android:id="@+id/buttonEditar"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryTextBlanco" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
